{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "npm run build",
            "command": "npm run build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$ts-webpack", "$tslint-webpack"]
        },
        {
            "type": "shell",
            "label": "npm run start",
            "command": "npm run start",
            "group": "build",
            "isBackground": true,
            "problemMatcher": ["$ts-webpack-watch", "$tslint-webpack-watch"]
        },
        {
            "type": "shell",
            "label": "npm run lint:script",
            "command": "npm run lint:script",
            "group": "test"
        },
        {
            "type": "shell",
            "label": "npm run lint:format",
            "command": "npm run lint:format",
            "group": "test"
        },
        {
            "type": "shell",
            "label": "npm run lint",
            "command": "npm run lint",
            "group": "test"
        }
    ]
}
